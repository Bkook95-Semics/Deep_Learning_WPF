<Window x:Class="Deep_WPF.LabelingTool"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Deep_WPF"
        mc:Ignorable="d"
        Title="LabelingTool" Height="500" Width="1000" MinWidth="1000">
    <DockPanel>
        <Grid ShowGridLines="false" DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <TextBlock Margin="5" Grid.Row="0" Grid.Column="0">INPUT IMAGE PATH :</TextBlock>
            <TextBox Margin="5" Grid.Row="0" Grid.Column="1" Name="tb_InputDir" HorizontalAlignment="Stretch" IsEnabled="False"></TextBox>
            <Button Margin="5" Grid.Row="0" Grid.Column="2" Width="20" Name="btn_InputDir" Click="btn_InputDir_Click">...</Button>
        </Grid>

        <Grid ShowGridLines="false" DockPanel.Dock="Right">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Margin="5,0,0,-5" HorizontalAlignment="Center">Rect List</TextBlock>
            <ListBox Grid.Row="1" Margin="5" HorizontalAlignment="Right" MinWidth="200" Name="lb_rectlist"></ListBox>
            <TextBlock Grid.Row="2" Margin="5,0,0,-5" HorizontalAlignment="Center">File List</TextBlock>
            <ListBox Grid.Row="3" Margin="5" HorizontalAlignment="Right" MinWidth="200" Name="lb_filelist" SelectionChanged="lb_filelist_SelectionChanged"></ListBox>
            
        </Grid>

        <Grid DockPanel.Dock="Top" Name="drawGrid" MouseMove="drawGrid_MouseMove"  MouseLeftButtonDown="drawGrid_MouseDown" MouseLeftButtonUp="drawGrid_MouseUp" MouseRightButtonDown="drawGrid_MouseRightButtonDown">
            <Canvas Margin="5" Name="drawcanvas">
                <Image Stretch="Fill" Name="Im_Image" ></Image>
            </Canvas>
            
        </Grid>
    </DockPanel>
</Window>
